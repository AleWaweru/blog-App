<%= stylesheet_link_tag 'session', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="login-container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <%= render_field(f, :email, "Email", true) %>
    <%= render_field(f, :password, "Password", false) %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
