<%= stylesheet_link_tag 'post', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Add Comments to Post</h1>

      <%= form_for [@user, @post, @comment] do |f| %>
        <div class="form-group">
          <%= f.label :text %>
          <%= f.text_area :text, class: "form-control", placeholder: "Add your comment" %>
        </div>
        
        <%= f.submit 'Submit', class: "btn btn-primary" %>

        <% if can? :destroy, @comment %>
          <%= link_to 'Delete Comment', user_post_comments_path(user_id: @post.author.id, post_id: @post.id, id: @comment.id), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: "btn btn-danger" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
