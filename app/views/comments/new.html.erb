<%= stylesheet_link_tag 'post', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Add Comments to Post</h1>

      <%= form_with model: @comment, url: user_post_comments_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :text %>
          <%= form.text_area :text, class: "form-control", placeholder: "Add your comment" %>
        </div>
        
        <h1>Cool</h1>

        <%= form.submit "Add Comment", class: "btn btn-primary btn-block" %>

        <% if can? :destroy, @comment %>
          <%= link_to 'Delete Comment', @comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
